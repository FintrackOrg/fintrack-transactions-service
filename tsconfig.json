{
  "extends": "@tsconfig/node16/tsconfig.json",
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "useUnknownInCatchVariables": true,
    "paths": {
      "@app/*": ["src/application/*"],
      "@config/*": ["src/config/*"],
      "@domain/*": ["src/domain/*"],
      "@infra/*": ["src/infraestructure/*"]
    }
  }
}
